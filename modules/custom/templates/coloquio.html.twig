{% else %}
    {% if seminarios.evento.seminario %}
        {{ seminarios.evento.seminario }}<br>
        <em>{{ seminarios.evento.titulo }}</em><br>
        <strong>{{ seminarios.evento.ponente }}</strong> - <em>{{ seminarios.evento.origen }}</em>
        {# {% if seminarios.evento.resumen %}
            <p>{{ seminarios.evento.resumen }}</p>
        {% endif %} #}<br>
        {{ seminarios.evento.fecha }} - {{ evento.hora }}<br>
        {{ seminarios.evento.lugar }} <br>
        <hr>
   {% else %}
      No hay seminarios esta semana. <br>
      <hr>
   {% endif %}    
{% endif %}

</div>
